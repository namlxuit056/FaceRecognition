<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg" >

    <FrameLayout
        android:layout_width="@dimen/area_unlock_size_width"
        android:layout_height="@dimen/area_unlock_size_height"
        android:layout_centerInParent="true" >

        <View
            android:id="@+id/bg_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#ffffff" />

        <com.vinisoft.facesdk.custom.CameraView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_area_preview"
            android:padding="5.0dp" />
    </FrameLayout>

</RelativeLayout>